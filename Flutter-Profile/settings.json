{

  "files.exclude": {
    "._.DS_Store": true,
    "._.idea": true,
    "._**": true,
    ".dart_tool": true,
    ".idea": true,
    ".vscode": true,
    "**._.dart_tool": true
  },

  "git.enableSmartCommit": true,
  "git.ignoreLegacyWarning": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "git.confirmSync": false,

  "powermode.enabled": true,
  "powermode.presets": "flames",
  "powermode.combo.timerEnabled": "hide",
  "powermode.combo.counterEnabled": "hide",
  "powermode.shake.enabled": false,
  "powermode.combo.location": "off",
  

  "[dart]": {

    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.detectIndentation": false,
    "editor.guides.indentation": false,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.tabSize": 2,
    "diffEditor.renderIndicators": true,
    "diffEditor.renderMarginRevertIcon": true,
    "diffEditor.renderSideBySide": true,
    "diffEditor.wordWrap": "inherit",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.codeActionWidget.showHeaders": true,
    "editor.codeLens": true,
    "editor.colorDecorators": true,
    "editor.comments.ignoreEmptyLines": true,
    "editor.comments.insertSpace": true,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.cursorStyle": "line"
  },

  "editor.minimap.enabled": false,
  "vsicons.dontShowNewVersionMessage": true,
  "editor.accessibilitySupport": "off",
  "editor.selectionHighlight": false,
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
},
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  "files.autoSave": "afterDelay",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "RainbowBrackets.depreciation-notice": false,
  "explorer.expandSingleFolderWorkspaces": false,
  "editor.suggest.showFolders": true,
  "explorer.compactFolders": false,
  "dart.checkForSdkUpdates": false,
  "generate.template.type": "Clean Code",
 // Cor do coment√°rio normal
    "editor.tokenColorCustomizations": {
        "comments": "#799906"        
    },
    "workbench.colorCustomizations": {
      // Icone do perfil
      "profileBadge.background": "#ff0800",
      // Barra lateral esqueda
      "activityBar.background": "#070707",
      "activityBar.foreground": "#c07a33",
      "activityBar.inactiveForeground": "#c7c4c4",
      // Abas
      "tab.activeBorder": "#c07a33",
      "tab.activeBackground": "#070707",
      "tab.inactiveBackground": "#070707",
      "tab.activeForeground": "#ffffff",
      "tab.inactiveForeground": "#c7c4c4",
      "editorGroupHeader.tabsBackground": "#070707",
      "tab.activeBorderTop": "#070707",
      "tab.unfocusedInactiveForeground": "#c7c4c4",
      "tab.unfocusedActiveForeground": "#ffffff",
      "tab.hoverBackground": "#c07a332f", // Borda ao passar o mouse
      // Painel de pastas
      "sideBar.background": "#070707",
      "sideBar.border": "#202020",
      "sideBarSectionHeader.background": "#070707",
      "sideBar.foreground": "#dfdddd",
      // Editor
      "editorCursor.foreground": "#ffffff",
      "editor.selectionBackground": "default",
      "editorLineNumber.foreground": "#afa9a9",
      "editor.background": "#070707",
      "editorGroupHeader.border": "#070707",
      "editor.snippetTabstopHighlightBorder": "#ed0c0c",
      "editor.lineHighlightBorder": "#c07a332f",
      "editorGroup.border": "#070707",
      // Terminal e Painel
      "terminal.border": "#202020",
      "terminal.background": "#070707",
      "panel.background": "#070707",
      "panelTitle.activeForeground": "#ffffff",
      "panel.border": "#202020",
      "panelTitle.activeBorder": "#c07a33",
      "panelTitle.inactiveForeground": "#b3b3b3",
      "input.background": "#070707",
      "": "#ed0c0c",
      // Barra superir inferior
      "breadcrumb.background": "#070707a2",
      "breadcrumb.foreground": "#ffffff",
      "statusBar.background": "#070707a2",
      "titleBar.activeBackground": "#070707"
    },
  "workbench.editorAssociations": {
    "*.png": "luna.editor",
    "*.md": "default",
    "*.jpeg": "imagePreview.previewEditor",
    "*.webp": "imagePreview.previewEditor"
  },
  "vsintellicode.modelDownloadPath": "",
  "dart.flutterHotReloadOnSave": "all",
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "dart.previewFlutterUiGuides": true,
  "editor.inlineSuggest.enabled": false,
  "dart.showInspectorNotificationsForWidgetErrors": false,
  "workbench.iconTheme": "vscode-icons",
  "dart.debugExternalPackageLibraries": false,
  "dart.flutterSdkPath": "%USERPROFILE%/fvm/versions/3.7.2",
  "dart.debugSdkLibraries": false,
  "vscode-office.openOutline": true,
  "errorLens.excludeBySource": [
    "dart(unused_local_variable)",
    "dart(sort_child_properties_last)",
    "dart(avoid_print)"
  ],
  "remoteHub.commitDirectlyWarning": "off",
  "explorer.confirmDelete": false,
  "redhat.telemetry.enabled": true
  

}